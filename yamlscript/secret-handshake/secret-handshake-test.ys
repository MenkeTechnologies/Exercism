#!/usr/bin/env ys-0

require ys::taptest: :all

use: secret-handshake

test::
- name: Wink for 1
  code: commands(1)
  want:
  - wink

- name: Double blink for 10
  code: commands(2)
  want:
  - double blink

- name: Close your eyes for 100
  code: commands(4)
  want:
  - close your eyes

- name: Jump for 1000
  code: commands(8)
  want:
  - jump

- name: Combine two actions
  code: commands(3)
  want:
  - wink
  - double blink

- name: Reverse two actions
  code: commands(19)
  want:
  - double blink
  - wink

- name: Reversing one action gives the same action
  code: commands(24)
  want:
  - jump

- name: Reversing no actions still gives no actions
  code: commands(16)
  want: []

- name: All possible actions
  code: commands(15)
  want:
  - wink
  - double blink
  - close your eyes
  - jump

- name: Reverse all possible actions
  code: commands(31)
  want:
  - jump
  - close your eyes
  - double blink
  - wink

- name: Do nothing for zero
  code: commands(0)
  want: []

done: 11
